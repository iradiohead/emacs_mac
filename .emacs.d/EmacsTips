find ./ |egrep -i "*\.txt$|*\.lib$|*\.obj$|*\.lst$|*\.lbk$|*\..*_[01234]_$|*\.scc$|*\.ccc$|*\.err$|*\.mod$|*\.mp[12]$|*\.lnk$|  *\.cfv$|*\.map$|*\.env$|*\.386$|*\.cfx$|*\.exp$|_lazy*|*\.cfu$|*\.pex$|*\.exl$" |xargs rm

